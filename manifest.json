{
  "manifest_version": 3,
  "name": "Offline AI Chat (Ollama)",
  "description": "Chat interface for your local Ollama AI models. Requires Ollama to be installed and running on localhost.",
  "version": "1.0",
  "action": {},
  "permissions": [
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "http://localhost:11434/*",
    "http://127.0.0.1:11434/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}